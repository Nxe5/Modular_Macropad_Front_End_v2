{
	"name": "Example Macropad",
	"version": "1.0.0",
	"buttons": [
		{
			"id": 1,
			"label": "Copy",
			"action": "keypress",
			"keyCode": 99,
			"modifiers": ["ctrl"],
			"color": "#3498db"
		},
		{
			"id": 2,
			"label": "Paste",
			"action": "keypress",
			"keyCode": 118,
			"modifiers": ["ctrl"],
			"color": "#2ecc71"
		},
		{
			"id": 3,
			"label": "Cut",
			"action": "keypress",
			"keyCode": 120,
			"modifiers": ["ctrl"],
			"color": "#e74c3c"
		},
		{
			"id": 4,
			"label": "Undo",
			"action": "keypress",
			"keyCode": 122,
			"modifiers": ["ctrl"],
			"color": "#f39c12"
		},
		{
			"id": 5,
			"label": "VSCode",
			"action": "macro",
			"macro": "launch_vscode",
			"color": "#9b59b6"
		},
		{
			"id": 6,
			"label": "Terminal",
			"action": "macro",
			"macro": "launch_terminal",
			"color": "#34495e"
		}
	],
	"encoders": [
		{
			"id": 1,
			"clockwise": {
				"type": "keypress",
				"value": "volume_up",
				"modifiers": []
			},
			"counterClockwise": {
				"type": "keypress",
				"value": "volume_down",
				"modifiers": []
			},
			"press": {
				"type": "keypress",
				"value": "mute",
				"modifiers": []
			}
		},
		{
			"id": 2,
			"clockwise": {
				"type": "keypress",
				"value": "right",
				"modifiers": []
			},
			"counterClockwise": {
				"type": "keypress",
				"value": "left",
				"modifiers": []
			},
			"press": {
				"type": "keypress",
				"value": "enter",
				"modifiers": []
			}
		}
	],
	"display": {
		"brightness": 80,
		"timeout": 60,
		"defaultScreen": "main",
		"screens": [
			{
				"id": "main",
				"name": "Main Screen",
				"content": "Macropad Ready"
			},
			{
				"id": "info",
				"name": "Info Screen",
				"content": "Battery: 85%"
			}
		]
	},
	"layout": {
		"id": "default",
		"name": "Default Layout",
		"rows": 4,
		"columns": 4,
		"buttonPositions": [
			{ "id": 1, "row": 1, "col": 1 },
			{ "id": 2, "row": 1, "col": 2 },
			{ "id": 3, "row": 2, "col": 1 },
			{ "id": 4, "row": 2, "col": 2 },
			{ "id": 5, "row": 3, "col": 1 },
			{ "id": 6, "row": 3, "col": 2 }
		],
		"encoderPositions": [
			{ "id": 1, "row": 1, "col": 4 },
			{ "id": 2, "row": 3, "col": 4 }
		],
		"displayPosition": {
			"row": 1,
			"col": 3,
			"rowSpan": 3,
			"colSpan": 1
		}
	}
}
